<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"><![CDATA[


    />





    ]]>

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="111dp"
        android:gravity="center"
        android:text="Creamos tu cuenta"
        android:textColor="@color/container_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_nombre"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="306dp"
        android:layout_height="44dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/stylo_borde_edittext"
        android:ems="10"
        android:hint="@string/text_nombre"
        android:inputType="textPersonName"
        android:textColor="@color/container_white"
        app:layout_constraintBottom_toTopOf="@+id/text_correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/text_correo"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/stylo_borde_edittext"
        android:ems="10"
        android:hint="@string/text_correo"
        android:inputType="textEmailAddress"
        android:textColor="@color/container_white"
        app:layout_constraintBottom_toTopOf="@+id/text_contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nombre" />/>

    <EditText
        android:id="@+id/text_contraseña"
        android:layout_width="302dp"
        android:layout_height="46dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/stylo_borde_edittext"
        android:ems="10"
        android:hint="@string/text_contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/text_contraseñaconf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_correo" />

    <EditText
        android:id="@+id/text_contraseñaconf"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/stylo_borde_edittext"
        android:ems="10"
        android:hint="@string/text_contraseñaconf"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_contraseña" /><![CDATA[

    />















    ]]>

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="353dp"
        android:layout_height="128dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_horizontal"
        android:text="Al crear tu cuenta estas aceptando las condiciones terminos y servicio y politicas de su privacidad"
        android:textColor="@color/container_white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bto_registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_contraseñaconf" />

    <Button
        android:id="@+id/bto_registrar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/stylo_borde_edittext"
        android:onClick="Guardar"
        android:text="@string/bto_registrar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>