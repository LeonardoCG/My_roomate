<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".restablecercontrasenia">

    <TextView
        android:id="@+id/rtitlte1"
        android:layout_width="351dp"
        android:layout_height="82dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:text="Se te ha olvidado tu contraseña"
        android:textColor="@color/container_white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="!Vamos a recuperarlo¡"
        android:textColor="@color/container_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rcorreo"
        app:layout_constraintEnd_toEndOf="@+id/rbuttonPopup"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/rcorreo"
        app:layout_constraintTop_toBottomOf="@+id/rtitlte1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/rcorreo"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/btn_light"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/container_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rtitle3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rtitle2"
        tools:ignore="MissingConstraints"
        tools:text="Email" />

    <TextView
        android:id="@+id/rtitle3"
        android:layout_width="200dp"
        android:layout_height="91dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="51dp"
        android:gravity="center"
        android:text="Una vez introducida recibiras un coreo para cambiar tu contraseña"
        android:textColor="@color/container_white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rbuttonPopup"
        app:layout_constraintEnd_toEndOf="@+id/rbuttonPopup"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcorreo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/rbuttonPopup"
        android:layout_width="245dp"
        android:layout_height="46dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/btn_light"
        android:gravity="center"
        android:text="Restablecer mi contraseña"
        android:textColor="@color/container_white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rtitle3"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>