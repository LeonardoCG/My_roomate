<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modal_colocar_codigo_tel"
    android:layout_width="350sp"
    android:layout_height="400sp"
    android:orientation="vertical"
    android:background="@color/icons"
    tools:context=".ui.modal_poppup.CheckingCodigoCel">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="@string/verificar_codigo_cel"
            android:textAlignment="center"
            android:layout_marginTop="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/input_code_checkfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:background="@drawable/input_modal_style"
            android:ems="10"
            android:hint="XXXXXXXX"
            android:inputType="number"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btn_verificar_codigo_cel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:background="@drawable/btn_orange_squere"
            android:fontFamily="@font/segoe_ui_bold"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="@string/verificar_codigo"
            android:textColor="@color/icons"
            android:textSize="20sp" />


    </LinearLayout>

</FrameLayout>